{%- if page.layout == "ats" -%}
  {%- assign date_string = include.date.month | append: "/" -%}
{%- else -%}
  {%- assign date_string = i18n.months[include.date.month] | append: " " -%}
{%- endif -%}
{%- assign date_string = date_string | append: include.date.year -%}
{%- if include.date.month or include.date.year -%}
  {{ date_string }}
{%- elsif include.date.simple -%}
  {{ include.date.simple }}
{%- endif -%}
